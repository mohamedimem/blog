---
// library imports

// component imports
import Link from "./Link.astro";

// data imports
import navData from "../data/navData";
---

<header id="header">
  <div class="header-container">
    <a class="logo" href="/"
      ><img src="../images/logo.png" alt="Code With Imem" /><span
        >CODE WITH IMEM</span
      ></a
    >

    <nav id="main-nav">
      <ul>
        {
          navData.map((item) => (
            <li>
              <Link
                text={item.name}
                href={item.path}
                style="primary"
                isFilled={false}
                data-navLink
              />
            </li>
          ))
        }

        <li class="switch-theme-list-item">
          <button class="switch-theme-button nav-button"
            ><img
              class="icon-night-mode"
              width="22"
              height="22"
              src="img/icons/icon-night-mode.svg"
              alt="Switch to night mode"
            />
          </button>
        </li>

        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M10.875 18.75C15.2242 18.75 18.75 15.2242 18.75 10.875C18.75 6.52576 15.2242 3 10.875 3C6.52576 3 3 6.52576 3 10.875C3 15.2242 6.52576 18.75 10.875 18.75Z"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M16.4434 16.4438L20.9997 21.0002"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </ul><button id="toggle-menu" class="nav-button">Menu</button><button
        class="switch-theme-button nav-button"></button>
    </nav>
  </div>
</header>
